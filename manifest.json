{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "0.0.1",
    "description": "This extension is a sample extension",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "extension_style.css"
            ],
            "js": [
                "main.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}